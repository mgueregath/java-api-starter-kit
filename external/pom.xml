<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>io.codeffeine.starterkit</groupId>
        <artifactId>starterkit</artifactId>
        <version>1.0</version>
    </parent>
    <artifactId>external</artifactId>
    <packaging>jar</packaging>
    <name>External Services</name>
    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>
    <dependencies>
        <dependency>
            <groupId>io.codeffeine.starterkit</groupId>
            <artifactId>usecase</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.mail</groupId>
            <artifactId>javax.mail</artifactId>
            <version>1.5.2</version>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.9.3</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-configuration2</artifactId>
            <version>2.2</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <version>1.3</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <mailing.address>codeffeine.io@gmail.com</mailing.address>
                <mailing.name>Codeffeine</mailing.name>
                <mailing.password></mailing.password>
                <mailing.port>465</mailing.port>
                <mailing.server>smtp.gmail.com</mailing.server>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <filtering>true</filtering>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <id>testing</id>
            <properties>
                <mailing.address>codeffeine.io@gmail.com</mailing.address>
                <mailing.name>Codeffeine</mailing.name>
                <mailing.password></mailing.password>
                <mailing.port>465</mailing.port>
                <mailing.server>smtp.gmail.com</mailing.server>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <filtering>true</filtering>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <mailing.address>codeffeine.io@gmail.com</mailing.address>
                <mailing.name>Codeffeine</mailing.name>
                <mailing.password></mailing.password>
                <mailing.port>465</mailing.port>
                <mailing.server>smtp.gmail.com</mailing.server>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <filtering>true</filtering>
                    </resource>
                </resources>
            </build>
        </profile>
    </profiles>
</project>